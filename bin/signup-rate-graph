#!/bin/bash
# signup-rate-graph:
# Plot graph of HearFromYourMP signup rate.
# For now, run me as user francis@bitter and go to 
# http://www.hearfromyourmp.com/ycml-signups.png
#
# Copyright (c) 2005 UK Citizens Online Democracy. All rights reserved.
# Email: francsi@mysociety.org. WWW: http://www.mysociety.org/
# 
# $Id: signup-rate-graph,v 1.3 2005-12-10 10:23:20 francis Exp $

SOURCE=/tmp/ycml-signup-rate-graph-data-$RANDOM$RANDOM
GPSCRIPT=/tmp/ycml-signup-rate-graph-script-$RANDOM$RANDOM

echo "select date(creation_time), count(*) from constituent
    where constituency is not null group by
    date(creation_time) order by date(creation_time);" | psql -A -F " " ycml ycml | egrep -v "date|rows" >$SOURCE
echo "source $SOURCE"

cat >$GPSCRIPT <<END 
    set xdata time;
    set timefmt "%Y-%m-%d";
    # set xrange ["2001-06-21":"2005-10-11"];
    set format x "%b"
    set xlabel "2005-2006"
    # unset xlabel
    set ylabel "cumulative signups"
    set y2label "signups / day, aggregated over calendar day"
    set xtics nomirror
    set y2tics nomirror
    set terminal png font 'Vera.ttf' 9
    set nokey
    unset border
    n = 0;
    plot "< awk 'BEGIN { n = 0 } { n += \$2; print \$1, \$2, n; }' $SOURCE" using 1:3 with lines, "$SOURCE" using 1:2 with lines axes x1y2
END
echo "gpscript $GPSCRIPT"

export GDFONTPATH=/usr/share/fonts/truetype/ttf-bitstream-vera
gnuplot < $GPSCRIPT > ~/public_html/ycml-signups.png

